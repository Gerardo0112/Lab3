@using Lab3.Models
@model IEnumerable<Almacen>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Almacen</title>
    <style type="text/css">
        body {
            font-family: Arial;
            font-size: 12pt;
        }
        table{
            border: 1px solid #ccc;
            border-collapse: collapse;
            background-color: #fff;
        }
        table th{
            background-color: #88DBFD;
            color: #333;
            font-weight: bold;
        }
        table th, table td{
            padding: 5px;
            border: 1px solid #ccc;
        }
        table, table table td{
            border: 0px solid #ccc;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm("Almacen", "Lectura", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <input type ="file" name=" postedFile" />
        <input type="submit" value=" Importar"/>
    }
    @if (Model.Count() > 0)
    {
        <hr />
        <table cellpadding="0" cellspacing="0">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Casa Farmaceutica</th>
                <th>Precio</th>
                <th>Cantidad</th>
            </tr>
            @foreach (Almacen dato in Model)
            {
            <tr>
                <td>@dato.id</td>
                <td>@dato.nombre</td>
                <td>@dato.descripcion</td>
                <td>@dato.casafarmaceutica</td>
                <td>@dato.precio</td>
                <td>@dato.cantidad</td>
            </tr>
            }
        </table>
    }
</body>
</html>
